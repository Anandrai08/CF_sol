#include <iostream>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n, k;
        cin >> n >> k;
        if (k == 1) {
            cout << "1" << endl;
        } else {
    int result = k+ (k - 1) / (n - 1);

            cout << result << endl;
        }
    }

    return 0;
}
